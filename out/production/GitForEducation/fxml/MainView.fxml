<?import edugit.LocalPanelView?>
<?import edugit.RemotePanelView?>
<?import edugit.WorkingTreePanelView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<GridPane alignment="CENTER" hgap="5" vgap="5" fx:controller="edugit.SessionController" xmlns:fx="http://javafx.com/fxml" id="gridPane">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" percentWidth="26"/>
        <ColumnConstraints halignment="CENTER" percentWidth="11"/>
        <ColumnConstraints halignment="CENTER" percentWidth="26"/>
        <ColumnConstraints halignment="CENTER" percentWidth="11"/>
        <ColumnConstraints halignment="CENTER" percentWidth="26"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" percentHeight="9"/>
        <RowConstraints valignment="CENTER" percentHeight="9"/>
        <RowConstraints valignment="CENTER" percentHeight="15"/>
        <RowConstraints valignment="CENTER" percentHeight="9"/>
        <RowConstraints valignment="CENTER" percentHeight="15"/>
        <RowConstraints valignment="CENTER" percentHeight="9"/>
        <RowConstraints valignment="CENTER" percentHeight="9"/>
    </rowConstraints>

    <WorkingTreePanelView GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.rowSpan="7" id="workingTreePanelView"/>

    <LocalPanelView GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.rowSpan="7" id="localPanelView"/>

    <RemotePanelView GridPane.rowIndex="0" GridPane.columnIndex="4" GridPane.rowSpan="7" id="remotePanelView"/>

    <Button GridPane.rowIndex="2" GridPane.columnIndex="1" text="Commit" onAction="#handleCommitButton"/>

    <Button GridPane.rowIndex="4" GridPane.columnIndex="1" text="Merge" onAction="#handleMergeButton"/>

    <Button GridPane.rowIndex="2" GridPane.columnIndex="3" text="Push" onAction="#handlePushButton"/>

    <Button GridPane.rowIndex="4" GridPane.columnIndex="3" text="Fetch" onAction="#handleFetchButton"/>

    <stylesheets>
        <URL value="@../css/BaseStyle.css"/>
        <URL value="@../css/MainView.css" />
    </stylesheets>
</GridPane>