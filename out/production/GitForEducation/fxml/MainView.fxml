<?import edugit.CommitTreePanelView?>
<?import edugit.WorkingTreePanelView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<GridPane
        alignment="TOP_CENTER"
        hgap="5" vgap="5"
        fx:controller="edugit.SessionController"
        xmlns:fx="http://javafx.com/fxml"
        id="gridPane"
        stylesheets="/edugit/resources/css/BaseStyle.css">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" percentWidth="26"/>
        <ColumnConstraints halignment="LEFT" percentWidth="11"/>
        <ColumnConstraints halignment="LEFT" percentWidth="26"/>
        <ColumnConstraints halignment="LEFT" percentWidth="11"/>
        <ColumnConstraints halignment="LEFT" percentWidth="26"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="TOP" percentHeight="9"/>
        <RowConstraints valignment="TOP" percentHeight="9"/>
        <RowConstraints valignment="TOP" percentHeight="15"/>
        <RowConstraints valignment="TOP" percentHeight="9"/>
        <RowConstraints valignment="TOP" percentHeight="15"/>
        <RowConstraints valignment="TOP" percentHeight="9"/>
        <RowConstraints valignment="TOP" percentHeight="9"/>
    </rowConstraints>
    <!-- TODO: resizing window should eventually just cut off the views. don't keep scrunching -->

    <MenuBar fx:id="menuBar"
            GridPane.rowIndex="0"
            GridPane.columnSpan="5" />

    <GridPane alignment="center"
              hgap="10"
              vgap="10"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0"
              GridPane.rowSpan="7">

        <Button GridPane.rowIndex="0"
                GridPane.columnIndex="0"
                fx:id="gitStatusButton"
                text="git status"
                onAction="#loadPanelViews"/>

        <Text GridPane.rowIndex="0"
              GridPane.columnIndex="1"
              fx:id="repoNameText"
              id="title-text"/>

        <WorkingTreePanelView
                GridPane.rowIndex="1"
                GridPane.columnSpan="2"
                fx:id="workingTreePanelView"/>

        <TextArea  GridPane.rowIndex="2"
                    fx:id="commitMessageField"
                    GridPane.columnSpan="2"
                    prefColumnCount="1"
                    prefRowCount="3"
                    promptText="Commit message..." />

    </GridPane>

    <CommitTreePanelView GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.rowSpan="7" fx:id="localCommitTreePanelView"/>

    <CommitTreePanelView GridPane.rowIndex="0" GridPane.columnIndex="4" GridPane.rowSpan="7" fx:id="remoteCommitTreePanelView"/>

    <Button GridPane.rowIndex="1"
            GridPane.columnIndex="1"
            fx:id="commitButton"
            text="Commit"
            onAction="#handleCommitButton"/>

    <Button GridPane.rowIndex="3"
            GridPane.columnIndex="1"
            fx:id="mergeButton"
            text="Merge"
            onAction="#handleMergeButton"/>

    <Button GridPane.rowIndex="1"
            GridPane.columnIndex="3"
            fx:id="pushButton"
            text="Push"
            onAction="#handlePushButton"/>

    <Button GridPane.rowIndex="3"
            GridPane.columnIndex="3"
            fx:id="fetchButton"
            text="Fetch"
            onAction="#handleFetchButton"/>

    <stylesheets>
        <URL value="@../css/BaseStyle.css"/>
    </stylesheets>
</GridPane>