<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:controller="edugit.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root">

    <Text id="welcome-text" text="Create + Push"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Repo location:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Label fx:id="repoLocation"
           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Choose..." onAction="#handleChooseRepoLocationButton"
            GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="File name:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="fileNameText"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Commit message:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="commitText"
           GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Commit"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actionTarget"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@../css/MainView.css" />
    </stylesheets>
</GridPane>