<?import org.controlsfx.control.NotificationPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<NotificationPane fx:controller="elegit.MergeWindowController"
                  xmlns:fx="http://javafx.com/fxml"
                  fx:id="notificationPane">
    <content>
        <VBox   spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <HBox   alignment="TOP_CENTER">
                <GridPane   style="-fx-border-color: grey; -fx-background-color: gainsboro;"
                            vgap="5"
                            hgap="10">
                    <padding>
                        <Insets top="10" bottom="10" right="10" left="10"/>
                    </padding>
                    <CheckBox   fx:id="mergeRemoteTrackingCheckBox"
                                GridPane.columnIndex="0"
                                GridPane.rowIndex="0"
                                GridPane.valignment="TOP"/>
                    <Text   text="Merge remote-tracking branch "
                            fx:id="mergeRemoteTrackingText"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="0"
                            GridPane.halignment="CENTER"/>
                    <Text   fx:id="remoteTrackingBranchName"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="1"
                            GridPane.halignment="CENTER"/>
                    <Text   fx:id="intoLocalBranchText"
                            text="into local branch"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="2"
                            GridPane.halignment="CENTER"/>
                    <Text   fx:id="localBranchName1"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="3"
                            GridPane.halignment="CENTER"/>
                </GridPane>
                <VBox   style="-fx-border-color: grey; -fx-background-color: gainsboro">
                    <padding>
                        <Insets top="10" right="10"/>
                    </padding>
                    <GridPane   vgap="5"
                                hgap="10">
                        <padding>
                            <Insets left="10" bottom="12"/>
                        </padding>
                        <CheckBox   fx:id="mergeDifLocalBranchCheckBox"
                                    GridPane.columnIndex="0"
                                    GridPane.rowIndex="0"
                                    GridPane.valignment="TOP"/>
                        <Text   text="Merge local branch "
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="0"
                                GridPane.halignment="CENTER"/>
                        <ComboBox   fx:id="branchDropdownSelector"
                                    GridPane.columnIndex="1"
                                    GridPane.rowIndex="1"
                                    GridPane.halignment="CENTER"/>
                        <Text   text="into local branch"
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="2"
                                GridPane.halignment="CENTER"/>
                        <Text   fx:id="localBranchName2"
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="3"
                                GridPane.halignment="CENTER"/>
                    </GridPane>
                    <Hyperlink  fx:id="trackLink"
                                alignment="BOTTOM_LEFT"
                                onAction="#handleTrackDifBranch"
                                text="locally track another branch..."/>
                </VBox>
            </HBox>
            <HBox   spacing="30"
                    alignment="TOP_CENTER">
                <Button text="Merge"
                        onAction="#handleMergeButton"
                        fx:id="mergeButton"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="5"/>
                <Button text="Cancel"
                        onAction="#closeWindow"
                        GridPane.halignment="RIGHT"
                        GridPane.rowIndex="5"
                        GridPane.columnIndex="1"/>
            </HBox>
        </VBox>
    </content>
</NotificationPane>