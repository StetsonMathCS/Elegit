<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:controller="elegit.MergeWindowController"
                  xmlns:fx="http://javafx.com/fxml"
                  fx:id="anchorRoot">
    <children>
        <VBox   spacing="10"
                AnchorPane.rightAnchor="5"
                AnchorPane.leftAnchor="5"
                AnchorPane.topAnchor="5"
                AnchorPane.bottomAnchor="20">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <HBox   alignment="TOP_CENTER">
                <GridPane   style="-fx-border-color: grey; -fx-background-color: gainsboro;"
                            vgap="5"
                            hgap="10">
                    <padding>
                        <Insets top="10" bottom="10" right="10" left="10"/>
                    </padding>
                    <Text   GridPane.columnIndex="1"
                            GridPane.rowIndex="0"
                            text="Merge remote-tracking"
                            style="-fx-font-size: 15; -fx-underline: true;"/>
                    <CheckBox   fx:id="mergeRemoteTrackingCheckBox"
                                GridPane.columnIndex="0"
                                GridPane.rowIndex="0"
                                GridPane.valignment="TOP"/>
                    <Text   text="Merge remote-tracking branch "
                            fx:id="mergeRemoteTrackingText"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="1"
                            GridPane.halignment="CENTER"/>
                    <Text   fx:id="remoteTrackingBranchName"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="2"
                            GridPane.halignment="CENTER"/>
                    <Text   fx:id="intoLocalBranchText"
                            text="into local branch"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="3"
                            GridPane.halignment="CENTER"/>
                    <Text   fx:id="localBranchName1"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="4"
                            GridPane.halignment="CENTER"/>
                </GridPane>
                <VBox   style="-fx-border-color: grey; -fx-background-color: gainsboro">
                    <padding>
                        <Insets top="10" right="10"/>
                    </padding>
                    <GridPane   vgap="5"
                                hgap="10">
                        <padding>
                            <Insets left="10" bottom="12"/>
                        </padding>
                        <Text   GridPane.columnIndex="1"
                                GridPane.rowIndex="0"
                                text="Merge local"
                                style="-fx-font-size: 15; -fx-underline: true;"/>
                        <CheckBox   fx:id="mergeDifLocalBranchCheckBox"
                                    GridPane.columnIndex="0"
                                    GridPane.rowIndex="0"
                                    GridPane.valignment="TOP"/>
                        <Text   text="Merge local branch "
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="1"
                                GridPane.halignment="CENTER"/>
                        <ComboBox   fx:id="branchDropdownSelector"
                                    GridPane.columnIndex="1"
                                    GridPane.rowIndex="2"
                                    GridPane.halignment="CENTER"/>
                        <Text   text="into local branch"
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="3"
                                GridPane.halignment="CENTER"/>
                        <Text   fx:id="localBranchName2"
                                GridPane.columnIndex="1"
                                GridPane.rowIndex="4"
                                GridPane.halignment="CENTER"/>
                    </GridPane>
                    <Hyperlink  fx:id="trackLink"
                                alignment="BOTTOM_LEFT"
                                onAction="#handleTrackDifBranch"
                                text="locally track another branch..."/>
                </VBox>
            </HBox>
            <HBox   spacing="30"
                    alignment="TOP_CENTER">
                <Button text="Merge"
                        onAction="#handleMergeButton"
                        fx:id="mergeButton"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="5"/>
                <Button text="Cancel"
                        onAction="#closeWindow"
                        GridPane.halignment="RIGHT"
                        GridPane.rowIndex="5"
                        GridPane.columnIndex="1"/>
            </HBox>
        </VBox>

        <!-- ******************* NOTIFICATION PANE ************************ -->
        <StackPane fx:id="notificationPane1"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.rightAnchor="0.0"
                   AnchorPane.leftAnchor="0.0">
            <AnchorPane fx:id="latestNotification"
                        StackPane.alignment="BOTTOM_LEFT"
                        maxHeight="15">
                <Line AnchorPane.topAnchor="2" id="notificationLine" />
                <Label   AnchorPane.leftAnchor="3"
                         AnchorPane.bottomAnchor="0"
                         fx:id="latestNotificationLabel"
                         id="notification"
                         text=""/>
                <ImageView  AnchorPane.rightAnchor="8"
                            AnchorPane.bottomAnchor="2"
                            fitHeight="11"
                            fitWidth="11">
                    <Image url="@../images/notification_basic.png"/>
                </ImageView>
                <Label fx:id="notificationNum"
                       id="notificationNum"
                       AnchorPane.bottomAnchor="6"
                       AnchorPane.rightAnchor="2"
                       StackPane.alignment="TOP_RIGHT"
                       text=""/>
            </AnchorPane>

            <StackPane fx:id="notificationListPane">
                <children>
                    <ScrollPane fx:id="notificationList"
                                prefHeight="100">
                        <content>
                            <VBox>
                                <children>

                                </children>
                            </VBox>
                        </content>
                    </ScrollPane>
                    <AnchorPane>
                        <children>
                            <Line AnchorPane.topAnchor="0.0" id="notificationLine" />
                            <Button AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="5" mnemonicParsing="false" prefHeight="22.0" prefWidth="75.0"
                                    id="codeButton"
                                    text="Clear All"/>
                            <Button AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="5" mnemonicParsing="false" prefHeight="22.0" prefWidth="75.0"
                                    id="codeButton"
                                    text="Minimize"/>
                        </children>
                    </AnchorPane>
                </children>
            </StackPane>
        </StackPane>
    </children>

    <stylesheets>
        <URL value="@../css/BaseStyle.css"/>
    </stylesheets>
</AnchorPane>