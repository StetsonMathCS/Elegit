<?import org.controlsfx.control.NotificationPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.ComboBox?>
<NotificationPane fx:controller="elegit.MergeWindowController"
                  xmlns:fx="http://javafx.com/fxml"
                  fx:id="notificationPane">
    <content>
        <GridPane   vgap="20"
                    hgap="20">

            <padding>
                <Insets bottom="10" left="10" right ="10" top="10"/>
            </padding>

            <Text   GridPane.columnIndex="0"
                    GridPane.rowIndex="0"
                    GridPane.columnSpan="2"
                    text="What would you like to merge?"/>

            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>

            <HBox   GridPane.columnIndex="1"
                    GridPane.rowIndex="1"
                    alignment="CENTER">

                <CheckBox   fx:id="mergeRemoteTrackingCheckBox"/>

                <Text   text="Merge remote-tracking branch "
                        fx:id="mergeRemoteTrackingText"/>

                <Text   fx:id="remoteTrackingBranchName"/>

            </HBox>

            <HBox   GridPane.columnIndex="1"
                    GridPane.rowIndex="2"
                    alignment="CENTER">

                <Text   fx:id="intoLocalBranchText1"/>

                <Text   fx:id="localBranchName1"/>

            </HBox>

            <HBox   GridPane.columnIndex="1"
                    GridPane.rowIndex="3"
                    alignment="CENTER">

                <CheckBox   fx:id="mergeDifLocalBranchCheckBox"/>

                <Text   text="Merge local branch "/>

                <ComboBox   fx:id="branchDropdownSelector"/>

            </HBox>

            <HBox   GridPane.columnIndex="1"
                    GridPane.rowIndex="4"
                    alignment="CENTER">

                <Text   fx:id="intoLocalBranchText2"/>

                <Text   fx:id="localBranchName2"/>

            </HBox>

            <HBox   GridPane.columnIndex="1"
                    GridPane.rowIndex="5"
                    alignment="CENTER"
                    spacing="50">

                <Button text="Merge"
                        onAction="#handleMergeButton"
                        fx:id="mergeButton"
                        GridPane.columnIndex="0"
                        GridPane.rowIndex="5"/>

                <Button text="Cancel"
                        onAction="#closeWindow"
                        GridPane.halignment="RIGHT"
                        GridPane.rowIndex="5"
                        GridPane.columnIndex="1"/>
            </HBox>



        </GridPane>
    </content>
</NotificationPane>