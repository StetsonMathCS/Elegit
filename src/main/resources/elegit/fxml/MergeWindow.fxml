            <tabs>
                <Tab text="From Fetch">
                    <content>
                        <GridPane hgap="3">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <Text   id="merge-text"
                                    fx:id="mergeRemoteTrackingText"
                                    GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
                                    text="Merge remote tracking branch head"/>
