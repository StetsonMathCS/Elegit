<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:controller="elegit.BranchCheckoutController"
                  xmlns:fx="http://javafx.com/fxml"
                  fx:id="anchorRoot">
    <children>
        <GridPane hgap="10"
                  vgap="10"
                  alignment="TOP_CENTER"
                  AnchorPane.rightAnchor="5"
                  AnchorPane.leftAnchor="5"
                  AnchorPane.topAnchor="5"
                  AnchorPane.bottomAnchor="20">

            <padding>
                <Insets bottom="10" left="10" right ="10" top="10"/>
            </padding>

            <Text GridPane.columnIndex="0"
                  GridPane.rowIndex="0"
                  text="Remote branches:" />
            <Text GridPane.columnIndex="1"
                  GridPane.rowIndex="0"
                  text="Local branches:" />

            <VBox GridPane.columnIndex="0"
                  GridPane.rowIndex="1"
                  GridPane.rowSpan="2"
                  spacing="10"
                  alignment="TOP_CENTER" >

                <ListView fx:id="remoteListView"
                          onMouseClicked="#handleRemoteListViewMouseClick"/>
                <Button fx:id="trackRemoteBranchButton"
                        onAction="#trackSelectedBranchLocally"
                        text="Track remote branch locally"/>

            </VBox>

            <VBox GridPane.columnIndex="1"
                  GridPane.rowIndex="1"
                  GridPane.rowSpan="2"
                  spacing="10"
                  alignment="TOP_CENTER">

                <ListView fx:id="localListView"
                          onMouseClicked="#handleLocalListViewMouseClick"/>
                <Button fx:id="checkoutLocalBranchButton"
                        onAction="#handleCheckoutButton"
                        text="Checkout local branch" />

            </VBox>

            <Button GridPane.rowIndex="3"
                    GridPane.columnIndex="1"
                    GridPane.halignment="RIGHT"
                    prefWidth="80"
                    text="Cancel"
                    onAction="#closeWindow"/>

        </GridPane>
        <!-- ******************* NOTIFICATION PANE ************************ -->
        <StackPane fx:id="notificationPane1"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.rightAnchor="0.0"
                   AnchorPane.leftAnchor="0.0">
            <AnchorPane fx:id="latestNotification"
                        StackPane.alignment="BOTTOM_LEFT"
                        maxHeight="15">
                <Line AnchorPane.topAnchor="2" id="notificationLine" />
                <Label   AnchorPane.leftAnchor="3"
                         AnchorPane.bottomAnchor="0"
                         fx:id="latestNotificationLabel"
                         id="notification"
                         text=""/>
                <ImageView  AnchorPane.rightAnchor="8"
                            AnchorPane.bottomAnchor="2"
                            fitHeight="11"
                            fitWidth="11">
                    <Image url="@../images/notification_basic.png"/>
                </ImageView>
                <Label fx:id="notificationNum"
                       id="notificationNum"
                       AnchorPane.bottomAnchor="6"
                       AnchorPane.rightAnchor="2"
                       StackPane.alignment="TOP_RIGHT"
                       text=""/>
            </AnchorPane>

            <StackPane fx:id="notificationListPane">
                <children>
                    <ScrollPane fx:id="notificationList"
                                prefHeight="100">
                        <content>
                            <VBox>
                                <children>

                                </children>
                            </VBox>
                        </content>
                    </ScrollPane>
                    <AnchorPane>
                        <children>
                            <Line AnchorPane.topAnchor="0.0" id="notificationLine" />
                            <Button AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="5" mnemonicParsing="false" prefHeight="22.0" prefWidth="75.0"
                                    id="codeButton"
                                    text="Clear All"/>
                            <Button AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="5" mnemonicParsing="false" prefHeight="22.0" prefWidth="75.0"
                                    id="codeButton"
                                    text="Minimize"/>
                        </children>
                    </AnchorPane>
                </children>
            </StackPane>
        </StackPane>
    </children>

    <stylesheets>
        <URL value="@../css/BaseStyle.css"/>
    </stylesheets>
</AnchorPane>
